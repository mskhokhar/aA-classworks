<!DOCTYPE html>
<html>
  <head>
    <title>MusicApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div align = "center">
      <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
          <%= error %><br>
        <% end %>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
